<h1>List of Articles</h1>

<ul id= "articles_list">
  <% @articles.each do |article| %>
  <li><h2><%= link_to article.title, article_path(article),
              class: 'article_title', id: "article_#{article.id}" %></h2></li>
  <%= article.body %>
  <p><%= link_to 'Delete', article_path(article), method: :delete,
data: {confirm: 'Are you sure you want to delete this post?'} %> |
<%= link_to 'Edit', edit_article_path(article) %></p>
  <% end %>
</ul>
<br/>



<%= link_to 'Create new Article', new_article_path, class: "new_article" %>
