<h1>Articles tagged with <%= @tag.name %></h1>
<% if logged_in? %>
<h3><%= link_to 'Delete Tag', tag_path(@tag), 
    method: :delete, 
    data: {confirm: 'Are you sure you want to delete this tag?'} %></h3>
<% end %>
<ul>
  <% @tag.articles.each do |article| %>
  <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>