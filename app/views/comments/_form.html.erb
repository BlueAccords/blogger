<h3>Post a comment</h3>

<%= form_for [ @article, @comment] do |f| %>
  <p>
    <%= f.label :name, 'Your Name' %> <br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, 'Email' %> <br/>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :body, 'Body' %> <br/>
    <%= f.text_area :body %>
  </p>
  
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>